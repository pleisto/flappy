<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Authors>Pleisto</Authors>
		<ProductName>Pleisto.Flappy</ProductName>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<RepositoryUrl>https://github.com/pleisto/flappy</RepositoryUrl>
		<IncludeSymbols>true</IncludeSymbols>
		<TargetFrameworks>net7.0;net6.0;net48;netstandard2.0;netstandard2.1</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<LangVersion>11.0</LangVersion>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<AnalysisLevel>latest</AnalysisLevel>
		<DebugType>full</DebugType>
		<Nullable>disable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
      <None Include="../.editorconfig" Link=".editorconfig" />

		<None Include="../../../LICENSE" PackagePath="" Pack="True" />
		<None Include="../README.md" PackagePath="" Pack="True" />
    </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Newtonsoft.Json.Schema" Version="3.0.15" />
    <PackageReference Include="OpenAI" Version="1.7.2" />
    <PackageReference Include="System.ComponentModel" Version="4.3.0" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
  </ItemGroup>

</Project>
