<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Authors>Pleisto</Authors>
    <ProductName>Pleisto.Flappy.Native</ProductName>
    <TargetFrameworks>net7.0;net6.0;netcoreapp3.1;netstandard2.1;netstandard2.0;net472;net48</TargetFrameworks>
    <ImplicitUsings>disabled</ImplicitUsings>
    <LangVersion>11.0</LangVersion>
    <DebugType>embedded</DebugType>
    <Nullable>disable</Nullable>
    <!--Nuget
    Package Info-->
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/pleisto/flappy</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.0.0.4-alpha</Version>
    <PackageTags>wasi;native;python</PackageTags>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup>
    <None Include="LICENSE" PackagePath="" Pack="True" Visible="True" />
    <None Include="README.md" PackagePath="" Pack="True" Visible="True" />
  </ItemGroup>

  <!--Mapper
  of Cargo build-->
  <ItemGroup>
    <None Include="runtimes/**/*">
      <Pack>True</Pack>
      <PackagePath>runtimes</PackagePath>
    </None>
  </ItemGroup>
</Project>